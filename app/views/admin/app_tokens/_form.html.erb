<!-- Page Title -->
<div class="page-title-bar">
  <div class="row">
    <div class="col-xs-6"><h2>App Tokens</h2></div>
    <div class="col-xs-6">
    </div>
  </div>
</div>
<!-- Page Breadcrumb -->
<div class="page-breadcrumb">
  <div class="row">
    <div class="col-sm-7">
      <a href="<%= admin_path %>" class="back-angle"><i class="fa fa-long-arrow-left"></i> Back to Dashboard</a>
    </div>
    <div class="col-sm-5">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= admin_path %>">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="<%= admin_app_tokens_path %>">App Tokens</a></li>
        <li class="breadcrumb-item active">Add AppToken</li>
      </ol>
    </div>
  </div>
</div>
<div class="start-content">
  <div class="create-brand">
    <div class="row">
      <%= render 'shared/error_messages', object: @app_token %>
      <%= form_for [:admin, @app_token], html: { class: 'group-border-dashed', help: :block } do |f| %>
        <%= f.hidden_field :platform, value: params[:platform] %>
        <div class="col-md-6">
          <div class="col-md-12">
            <div class="form-group">
              <label class="control-label">Title</label>
              <%= f.text_field :title, required: true, class:"form-control"%>
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              <label class="control-label">Token</label>
              <%= f.text_field :token, class:"form-control"%>
              <p>Leave blank if you want a random complex token</p>
            </div>
          </div>
        </div>
        <div class="col-md-12">
          <div class="save-all">
            <button class="btn-right">Save <i class="fa fa-long-arrow-right"></i></button>
            <div class="clearfix"></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

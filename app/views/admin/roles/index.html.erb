<div class="page-title-bar">
  <div class="row">
    <div class="col-xs-6"><h2>Roles</h2></div>
    <div class="col-xs-6">
      <div class="add-new-btn dark-btn">
        <a href="<%= new_admin_role_path %>"><img src="/dashboard/images/add-new-icon.png" alt="Add"> Add Role</a>
      </div>
    </div>
  </div>
</div>
<div class="page-breadcrumb">
  <div class="row">
    <div class="col-sm-7">
      <!--
      <a href="javascript:void(0)" class="back-angle"><i class="fa fa-long-arrow-left"></i> Back To Campagin</a>
      -->
    </div>
    <div class="col-sm-5">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= admin_path %>">Dashboard</a></li>
        <li class="breadcrumb-item active">Roles</li>
      </ol>
    </div>
  </div>
</div>
<div class="start-content">
  <div class="all-staff">
    <div class="row">
         <% @roles.each do |role| %>
      <div class="col-md-3 col-sm-6">
        <div class="main-view-item">
          <div class="view-header">
            <span>
              <%= link_to role.name,admin_role_path(role.id) %>
            </span>
          </div>
          <div class="view-footer">
            <a href="<%= edit_admin_role_path(role.id) %>" class="edit"><i class="fa fa-pencil"></i>Edit</a>
              <%= link_to admin_role_path(role.id), method: :delete,class: "delete", data: {confirm: "Are you sure?"} do %>
              <i class="fa fa-trash"></i>Delete
              <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


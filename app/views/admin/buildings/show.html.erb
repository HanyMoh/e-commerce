<!------------------------------------------------------------
Page Title
------------------------------------------------------->
<div class="page-title-bar">
  <div class="row">
    <div class="col-xs-6"><h2><%=@building.try(:name)%></h2></div>
  </div>
</div>
<!------------------------------------------------------------
Page Breadcrumb
------------------------------------------------------->
<div class="page-breadcrumb">
  <div class="row">
    <div class="col-sm-7">
      <a href="<%= admin_buildings_path %>" class="back-angle"><i class="fa fa-long-arrow-left"></i> Back To Buildings</a>
    </div>
    <div class="col-sm-5">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= admin_path %>">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="<%= admin_buildings_path %>">Buildings</a></li>
        <li class="breadcrumb-item active"><a href="javascript:void(0)"><%= @building.try(:name) %></a></li>
      </ol>
    </div>
  </div>
</div>
<div class="start-content">
  <div class="view-brand">
    <div class="brand-item">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-2"><h4 class="item-title">Name</h4></div>
          <div class="col-md-10"><p class="item-info"><%=@building.try(:name)%></p></div>
        </div>
      </div>
    </div>
    <div class="brand-item">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-2"><h4 class="item-title">Created at</h4></div>
          <div class="col-md-10"><p class="item-info"><%= @building.created_at %></p></div>
        </div>
      </div>
    </div>
    <div class="brand-item">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-2"><h4 class="item-title">Address / Area</h4></div>
          <div class="col-md-10">
            <p><%= @building.try(:area) %></p>
          </div>
        </div>
      </div>
    </div>
    <!-- Untill we implement the floors 
    <div class="brand-item">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-2"><h4 class="item-title">Nums of floors</h4></div>
          <div class="col-md-10">
            <p><%= @building.try(:floors_count) %></p>
          </div>
        </div>
      </div>
    </div>
    -->
    <div class="brand-item">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-2"><h4 class="item-title">Latitude</h4></div>
          <div class="col-md-10">
            <p><%= @building.try(:latitude) %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="brand-item">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-2"><h4 class="item-title">Longitude</h4></div>
          <div class="col-md-10"><p class="item-info"><a href="#"><%= @building.try(:longitude) %></a></p></div>
        </div>
      </div>
    </div>
    <div class="brand-item">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-2"><h4 class="item-title">Location</h4></div>
          <div class="col-md-10"><p class="item-info">
                <%= render :partial => 'building_map',locals: { lat: @building&.latitude, lng: @building&.longitude  }  %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="save-all">
        <a href="<%= edit_admin_building_path(@building.id) %>" class="#">
          <button class="#">Edit Building <i class="fa fa-mouse-pointer"></i></button>
        </a>
      </div>
    </div>
  </div>
</div>

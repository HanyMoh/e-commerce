<!-- Navbox breadcrumb -->
<div class="navbox-breadcrumb">
  <div class="container">
    <div class="back-line"> <a href="#">Back</a>
    <div class="line"></div>
  </div>
  <ul class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li>Login</li>
  </ul>
</div>
</div>
<% if @user.errors.any? %>
<div class="alert <%= bootstrap_class_for("error") %> alert-dismissable fade in animated zoomIn" style="margin-bottom: 0px;">
<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
<% @user.errors.full_messages.each do |message| %>
<%= message %>
<br/>
<% end %>
</div>
<% end %>
<div class="sign-big-section">
<div class="sign-box">
  <div class="row">
    <div class="col-md-7">
      <div class="sign-up-side signup">
        <h2>Sign up now !</h2>
        <div class="sign-forms">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.email_field :email, autofocus: true, placeholder: 'Enter your email', class: 'form-control' %>
                <span class="icon"><img src="images/navbox-images/sending.png" alt=""></span>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.text_field :user_name, placeholder: 'Example: "John Doe"', class: 'form-control' %>
                <span class="icon"><img src="images/navbox-images/user.png" alt=""></span>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.password_field :password, autocomplete: 'off', placeholder: 'Your password', class: 'form-control' %>
                <span class="icon"><img src="images/navbox-images/lock.png" alt=""></span>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Confirm your password', class: 'form-control' %>
                <span class="icon"><img src="images/navbox-images/lock-rotate.png" alt=""></span>
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <div class="terms">
                  <div class="pretty p-default p-round">
                    <input type="checkbox" required />
                    <div class="state p-success-o">
                      <label>I agree to the terms of the application <a href="#">NasNav Terms of Service.</a></label>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-12">
              <div class="create-btns">
                <input type="submit" value="Create My Account Now !">
                <div class="or-line">or</div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
        <div class="row">
          <div class="sign-big-section">
            <div class="sign-forms">
              <div class="create-btns">
                <div class="col-md-6">
                  <div class="continue-with-btn">
                    <%= link_to user_facebook_omniauth_authorize_path do %>
                    <button class="face">Continue with facebook</button>
                    <% end %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="continue-with-btn">
                    <%= link_to user_google_oauth2_omniauth_authorize_path do %>
                    <button class="google-plus">Continue with google</button>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <div class="having-account">
        <div class="having-account__content">
          <img src="images/navbox-images/shield_accept.png" alt="" draggable="false">
          <p>Do you have an account already?</p>
          <a href="<%= new_user_session_path %>">Log in now</a>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
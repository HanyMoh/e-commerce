<% content_for :bc_title do %>
  Organization Managers
<% end %>

<% content_for :bc_current do %>
  All Organization Managers
<% end %>

<% content_for :bc_buttons do %>
  <a href="<%= new_admin_organization_manager_path %>"><button type="button" class="btn btn-info"><i class="fa fa-plus-circle"></i> New Manager</button></a>
<% end %>

<%= render 'shared/breadcrumb' %>

<div class="card">
  <div class="card-body">
    <h4 class="card-title">Managers</h4>
    <div class="table-responsive m-t-40">
      <table id="myTable" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Avatar</th>
            <th>Name</th>
            <th>Email</th>
            <th>Organization</th>
            <th>Services</th>
            <th>Joined</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @organization_managers.newest_first.each do |manager| %>
            <tr>
              <td><%= image_tag(manager.avatar.thumb) %></td>
              <td><%= manager&.name %></td>
              <td><%= manager.email %></td>
              <td><%= manager.organization&.name %></td>
              <td><%= manager.service_type.titleize %></td>
              <td><%= time_ago_in_words(manager.created_at) %> ago</td>
              <td>
                <a href="<%= edit_admin_organization_manager_path(manager) %>" data-toggle="tooltip" data-original-title="Edit"> <i class="fa fa-pencil text-inverse m-r-10"></i> </a>
                <a href="<%= admin_organization_manager_path(manager) %>" data-method="delete" data-toggle="tooltip" data-original-title="Delete" data-confirm="Are you sure?"> <i class="fa fa-close text-danger"></i> </a>
              </td>
						</tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
	$(function() {
		$('#myTable').DataTable();
		var table = $('#example').DataTable({
			"columnDefs": [{
				"visible": false,
				"targets": 2
			}],
			"order": [
				[2, 'asc']
			],
			"displayLength": 25,
			"drawCallback": function(settings) {
				var api = this.api();
				var rows = api.rows({
						page: 'current'
				}).nodes();
				var last = null;
				api.column(2, {
						page: 'current'
				}).data().each(function(group, i) {
					if (last !== group) {
						$(rows).eq(i).before('<tr class="group"><td colspan="5">' + group + '</td></tr>');
						last = group;
					}
				});
			}
		});
		// Order by the grouping
		$('#example tbody').on('click', 'tr.group', function() {
			var currentOrder = table.order()[0];
			if (currentOrder[0] === 2 && currentOrder[1] === 'asc') {
				table.order([2, 'desc']).draw();
			} else {
				table.order([2, 'asc']).draw();
			}
		});
	});
</script>

<div class="page-title-bar">
	<div class="row">
		<div class="col-xs-6"><h2>Navbox Page Title</h2></div>
		<div class="col-xs-6">
			<div class="add-new-btn dark-btn">
			</div>
		</div>
	</div>
</div>

<div class="page-breadcrumb">
	<div class="row">
		<div class="col-sm-7">
			<a href="<%= admin_seo_page_titles_path %>" class="back-angle"><i class="fa fa-long-arrow-left"></i> Back to main page</a>
		</div>
		<div class="col-sm-5">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="<%= admin_path %>">Dashboard</a></li>
				<li class="breadcrumb-item"><a href="<%= admin_seo_page_titles_path %>"> Main </a></li>
				<li class="breadcrumb-item active">New page title</li>
			</ol>
		</div>
	</div>
</div>
<br/>
<%= render 'shared/error_messages', object: @seo_page_title %>
<div class="start-content">
	<div class="create-shop">
		<div class="row">
			<%= form_for [:admin, @seo_page_title], html: { help: :block } do |f| %>
        <%= f.hidden_field :shop_id, value: params[:shop] %>
        <div class="row">
          <div class="col-md-6">
            <div class="col-md-12 form-group">
              <label class="control-label">Page Title</label>
              <%= f.text_field :title, required: true, class:"form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="save-all">
              <button type="submit" name="popup" value="show">Save<i class="fa fa-mouse-check"></i></button>
            </div>
          </div>
        </div>
			<% end %>
		</div>
	</div>
</div>

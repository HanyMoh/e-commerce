<div class="page-title-bar">
  <div class="row">
    <div class="col-xs-6"><h2>Theme</h2></div>
    <div class="col-xs-6">
      <div class="add-new-btn">
        <a href="<%= admin_organization_themes_path %>"><img src="/dashboard/images/add-new-icon.png" alt="Add"> Themes</a>
      </div>
    </div>
  </div>
</div>
<div class="page-breadcrumb">
  <div class="row">
    <div class="col-sm-7">
      <!--
      <a href="javascript:void(0)" class="back-angle"><i class="fa fa-long-arrow-left"></i> Back to Point Manager</a>
    -->
    </div>
    <div class="col-sm-5">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= admin_path %>">Dashboard</a></li>
        <li class="breadcrumb-item active">Theme</li>
      </ol>
    </div>
  </div>
</div>
<div class="start-content">
  <%= render 'shared/error_messages', object: @organization_theme %>
  <div class="plus">
    <div class="row">
      <div class="col-sm-2">
      </div>
      <div class="col-sm-2">
      </div>
    </div>
    <br/>
      <%= form_for [:admin, @organization_theme], multipart: true do |f| %>
        <%= f.hidden_field :organization_id, value: @brand.organization_id %> 

        <div class="row">
          <div class="col-sm-4 form-group">
            <label class="control-label">Logo</label>
            <% if @organization_theme.logo? %>
              <br/>
              <%= image_tag(@organization_theme.logo_url, class: 'nbt-image') %>
              <br/><br/>
              <%= f.file_field :logo %>
            <% else %>
              <%= f.file_field :logo %>
            <% end %>
          </div>
          <div class="col-sm-4 form-group">
            <label class="control-label">First Color</label>
            <input name="organization_theme[first_color]" type="color" value="<%= @organization_theme.first_color %>" class="form-control nbt-main-color">
            <label class="control-label">Second Color</label>
            <input name="organization_theme[second_color]" type="color" value="<%= @organization_theme.second_color %>" class="form-control nbt-main-color">
          </div>
        </div>

        <div class="row">
          <div class="col-sm-8 form-group">
            <label class="control-label">First Section</label>
            <br/>
            <input id="first_section_show" name="organization_theme[first_section]" type="radio" value="true" <%= 'checked' if @organization_theme.first_section? %>>&nbsp;<label for="first_section_show">Show</label>
            <br/>
            <input id="first_section_hide" name="organization_theme[first_section]" type="radio" value="false" <%= 'checked' if !@organization_theme.first_section? %>>&nbsp;<label for="first_section_hide">Hide</label>
          </div>
        </div>

        <hr>

        <div class="row">
          <div class="col-sm-4 form-group">
            <label class="control-label">First Section Product</label>
            <%= f.number_field :first_section_product, class: 'form-control' %>
          </div>
          <div class="col-sm-4 form-group">
            <label class="control-label">First Section Image</label>
            <% if @organization_theme.first_section_image.present? %>
              <%= image_tag(@organization_theme.first_section_image.url, class: 'nbt-image') %>
              <br>
              <%= f.file_field :first_section_image, class: 'form-control' %>
            <% else %>
              <%= f.file_field :first_section_image, class: 'form-control' %>
            <% end %>
          </div>
        </div>

        <hr>

        <div class="row">
          <div class="col-sm-8 form-group">
            <label class="control-label">Second Section</label>
            <br/>
            <input id="second_section_show" name="organization_theme[second_section]" type="radio" value="true" <%= 'checked' if @organization_theme.second_section? %>>&nbsp;<label for="second_section_show">Show</label>
            <br/>
            <input id="second_section_hide" name="organization_theme[second_section]" type="radio" value="false" <%= 'checked' if !@organization_theme.second_section? %>>&nbsp;<label for="second_section_hide">Hide</label>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-4 form-group">
            <label class="control-label">Second Section Product</label>
            <%= f.number_field :second_section_product, class: 'form-control' %>
          </div>
          <div class="col-sm-4 form-group">
            <label class="control-label">Second Section Image</label>
            <% if @organization_theme.second_section_image.present? %>
              <%= image_tag(@organization_theme.second_section_image.url, class: 'nbt-image') %>
              <br>
              <%= f.file_field :second_section_image, class: 'form-control' %>
            <% else %>
              <%= f.file_field :second_section_image, class: 'form-control' %>
            <% end %>
          </div>
        </div>

        <hr>

        <div class="row">
          <div class="col-sm-8 form-group">
            <label class="control-label">Slider Body</label>
            <br/>
            <input id="slider_body_show" name="organization_theme[slider_body]" type="radio" value="true" <%= 'checked' if @organization_theme.slider_body? %>>&nbsp;<label for="slider_body_show">Show</label>
            <br/>
            <input id="slider_body_hide" name="organization_theme[slider_body]" type="radio" value="false" <%= 'checked' if !@organization_theme.slider_body? %>>&nbsp;<label for="slider_body_hide">Hide</label>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-4 form-group">
            <label class="control-label">Slider Header</label>
            <%= f.text_field :slider_header, class: 'form-control' %>
          </div>
          <div class="col-sm-8 form-group">
            <label class="control-label">Slider Images</label>
            <%= file_field_tag 'organization_theme[slider_images][]', multiple: true, class: 'form-control' %>
          </div>
        </div>
        <hr>

        <%= f.submit "Apply", class: 'btn btn-lg btn-info' %>
        <%= link_to "Discard", admin_organization_themes_path, class: 'btn btn-lg btn-danger' %>
      <% end %>
    </div>
  </div>
</div>

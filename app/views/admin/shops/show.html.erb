<% if @status == "show" %>
  <%= render partial: './shared/popups/create_shop', locals: { shop: @shop } %>
<% end %>

<!-- Page Title -->
<div class="page-title-bar">
  <div class="row">
    <div class="col-xs-6"><h2><%=@shop.try(:name)%></h2></div>
  </div>
</div>

<!-- Page Breadcrumb -->
<div class="page-breadcrumb">
  <div class="row">
    <div class="col-sm-7">
      <a href="<%= admin_shops_path %>" class="back-angle"><i class="fa fa-long-arrow-left"></i> Back To Shops</a>
    </div>
    <div class="col-sm-5">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= admin_path %>">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="<%= admin_shops_path %>">Shops</a></li>
        <li class="breadcrumb-item active"><a href="javascript:void(0)"><%= @shop.try(:name) %></a></li>
      </ol>
    </div>
  </div>
</div>

<div class="start-content">
  <div class="view-brand">
    <div class="brand-item">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-2"><h4 class="item-title">Name</h4></div>
          <div class="col-md-10"><p class="item-info"><%=@shop.try(:name)%></p></div>
        </div>
      </div>
    </div>
    <% unless check_num_of_brands(current_active_user).equal? 1 %>
    <div class="brand-item">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-2"><h4 class="item-title">Brand</h4></div>
          <div class="col-md-10">
            <p class="item-info"><%= @shop.brand.try(:name) %></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    <div class="brand-item">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-2"><h4 class="item-title">Area</h4></div>
          <div class="col-md-10">
            <p class="item-info"><%= @shop.building ? @shop.building.area : @shop.street %></p>
          </div>
        </div>
      </div>
    </div>
    <% if @shop.building.present? %>
    <div class="brand-item">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-2"><h4 class="item-title">Building</h4></div>
          <div class="col-md-10"><p class="item-info"><%= @shop.building.try(:name) %></p></div>
        </div>
      </div>
    </div>
    <% end %>
    <% if @shop.floor.present?  %>
    <div class="brand-item">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-2"><h4 class="item-title">Floor</h4></div>
          <div class="col-md-10"><p class="item-info"><%=@shop.try(:floor)%></p></div>
        </div>
      </div>
    </div>
    <% end %>
    <% if @shop.lat.present? %>
     <div class="brand-item">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-2"><h4 class="item-title">Latitude</h4></div>
          <div class="col-md-10"><p class="item-info"><%=@shop.try(:lat)%></p></div>
        </div>
      </div>
     </div>
    <% end %>
    <% if @shop.lng.present? %>
     <div class="brand-item">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-2"><h4 class="item-title">Longitude</h4></div>
          <div class="col-md-10"><p class="item-info"><%=@shop.try(:lng)%></p></div>
        </div>
      </div>
     </div>
     <% end %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="save-all">
        <a href="<%= edit_admin_shop_path(@shop.id) %>" class="#">
          <button class="#">Edit Shop <i class="fa fa-mouse-pointer"></i></button>
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  $(function() {
    $(window).on('load', function() {
       $('.message-popup.success').css('top','0px');
        setTimeout(function(){ 
             $('.message-popup').css('top','-60px');
        }, 2000);
    });
    $(window).on('load', function() {
       $('.message-popup.failed').css('top','0px');
        setTimeout(function(){ 
             $('.message-popup').css('top','-60px');
        }, 2000);
    });
    $(window).on('load', function() {
       $('.message-popup.success-deleted').css('top','0px');
        setTimeout(function(){ 
             $('.message-popup').css('top','-60px');
        }, 2000);
    });
     $(window).on('load', function () {
        $('#createShop').modal('show');
    });
  })
</script>

<!-- Page Title -->
<div class="page-title-bar">
  <div class="row">
    <div class="col-xs-6"><h2>Shop Sections</h2></div>
    <div class="col-xs-6">
      <div class="add-new-btn dark-btn">
      </div>
    </div>
  </div>
</div>
<!-- Page Breadcrumb -->
<div class="page-breadcrumb">
  <div class="row">
    <div class="col-sm-7">
      <a href="<%= admin_shop360_shop_floor_shop_sections_path(@shop360, @shop_floor) %>" class="back-angle"><i class="fa fa-long-arrow-left"></i> Back to Floors</a>
    </div>
    <div class="col-sm-5">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="<%= admin_products_path %>">Products</a></li>
        <li class="breadcrumb-item active"><a href="<%= admin_products_path %>">Add Product</a></li>
      </ol>
    </div>
  </div>
</div>

<%= render 'shared/error_messages', object: @shop_section %>
<div class="start-content">
  <div class="add-products">
    <%= form_for [:admin, :shop360, :shop_floor, @shop_section] do |f| %>
      <%= f.hidden_field :shop_floor_id, value: @shop_floor.id %>
      <%= f.hidden_field :organization_id, value: current_active_user.organization.id %>

      <div class="row form-group">
        <div class="col-md-4 form-group">
          <label class="control-label">Section Name</label>
          <%= f.text_field :name, class:"form-control"%>
        </div>
      </div>

      <div class="row form-group">
        <div class="col-md-4 form-group">
          <label class="control-label">Section Preview Image (Flat Image)</label>
          <% unless @shop_section.new_record? %>
            <%= image_tag(@shop_section.image.thumb.url) %>
          <% end %>
          <%= f.file_field :image, required: true, class:"form-control" %>
        </div>
      </div>

      <div class="row form-group">
        <div class="col-md-4 form-group">
          <%= f.submit 'Submit', class: 'btn btn-lg btn-info' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

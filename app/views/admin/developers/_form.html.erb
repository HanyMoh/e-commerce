<!-- Page Title -->
<div class="page-title-bar">
  <div class="row">
    <div class="col-xs-6"><h2>Developers</h2></div>
    <div class="col-xs-6">
    </div>
  </div>
</div>
<!-- Page Breadcrumb -->
<div class="page-breadcrumb">
  <div class="row">
    <div class="col-sm-7">
      <a href="<%= admin_path %>" class="back-angle"><i class="fa fa-long-arrow-left"></i> Back to Dashboard</a>
    </div>
    <div class="col-sm-5">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= admin_path %>">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="<%= admin_developers_path %>">Developers</a></li>
        <li class="breadcrumb-item active">Add Developer</li>
      </ol>
    </div>
  </div>
</div>
<div class="start-content">
  <div class="create-brand">
    <div class="row">
      <%= render 'shared/error_messages', object: @developer %>
      <%= form_for [:admin, @developer], html: { class: 'group-border-dashed', help: :block } do |f| %>
      <div class="col-md-6">
        <div class="col-md-12">
          <div class="form-group">
            <label class="control-label">Name</label>
            <%= f.text_field :name, required: true, class:"form-control"%>
          </div>
        </div>
        <div class="col-md-12">
          <div class="form-group">
            <label class="control-label">Password</label>
            <%= f.password_field :password, class:"form-control"%>
          </div>
        </div>
      </div>
      <div class="col-md-12">
        <div class="save-all">
          <button class="btn-right">Save <i class="fa fa-long-arrow-right"></i></button>
          <div class="clearfix"></div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

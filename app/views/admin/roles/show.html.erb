<!------------------------------------------------------------
Page Title
------------------------------------------------------->
<div class="page-title-bar">
  <div class="row">
    <div class="col-xs-6"><h2><%=@role.try(:name)%></h2></div>
  </div>
</div>
<!------------------------------------------------------------
Page Breadcrumb
------------------------------------------------------->
<div class="page-breadcrumb">
  <div class="row">
    <div class="col-sm-7">
      <a href="<%= admin_roles_path %>" class="back-angle"><i class="fa fa-long-arrow-left"></i> Back To Roles</a>
    </div>
    <div class="col-sm-5">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= admin_path %>">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="<%= admin_roles_path %>">Roles</a></li>
        <li class="breadcrumb-item active"><a href="javascript:void(0)"><%= @role.try(:name) %></a></li>
      </ol>
    </div>
  </div>
</div>
<div class="start-content">
  <div class="view-brand">
    <div class="brand-item">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-2"><h4 class="item-title">Name</h4></div>
          <div class="col-md-10"><p class="item-info"><%=@role.try(:name)%></p></div>
        </div>
      </div>
    </div>
    <div class="brand-item">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-2"><h4 class="item-title">Permissions</h4></div>
          <% @role.permissions.each do |per| %>
          <div class="col-md-10"><p class="item-info"><%= per.try(:action)%></p></div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="brand-item">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-2"><h4 class="item-title">Employees</h4></div>
          <div class="col-md-10">
            <% @role.employee_users.each do |emp| %>
            <p class="item-info"><%= emp.try(:name) %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>